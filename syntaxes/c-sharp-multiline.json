{
    "scopeName": "c-sharp-multiline.injection",
    "fileTypes": [
        "cs"
    ],
    "injectionSelector": [
        "L:source -comment -string"
    ],
    "patterns": [
        {
            "comment": "C# multi-lines strings",
            "begin": "(@\")(--sql)",
            "beginCaptures": {
                "2": {
                    "name": "comment.sql"
                }
            },
            "end": "(\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "comment": "C# multi-lines strings",
            "begin": "(@\")(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE)",
            "beginCaptures": {
                "2": {
                    "name": "keyword.sql"
                }
            },
            "end": "(\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        }
    ]
}
