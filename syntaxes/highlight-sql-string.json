{
    "scopeName": "inline-sql.injection",
    "fileTypes": [
        "py",
        "go",
        "js",
        "jsx",
        "ts",
        "tsx",
        "vue",
        "svelte",
        "java",
        "rb",
        "cs",
        "rs",
        "php"
    ],
    "injectionSelector": [
        "text.html.php",
        "L:source -comment -string"
    ],
    "patterns": [
        {
            "comment": "Rust multi-line raw strings",
            "begin": "(b?r)(#*)(\")(--\\s*sql)",
            "beginCaptures": {
                "1": {
                    "name": "string.quoted.byte.raw.rust"
                },
                "2": {
                    "name": "string.raw.rust"
                },
                "3": {
                    "name": "string.rust"
                },
                "4": {
                    "name": "comment.sql"
                }
            },
            "end": "(\")(\\2)",
            "endCaptures": {
                "1": {
                    "name": "string.rust"
                },
                "2": {
                    "name": "string.raw.rust"
                }
            },
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "(\")(--\\s*sql)",
            "beginCaptures": {
                "2": {
                    "name": "comment.sql"
                }
            },
            "end": "(\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "(?i)(\")(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE |CREATE INDEX )",
            "beginCaptures": {
                "2": {
                    "name": "keyword.sql"
                }
            },
            "end": "(\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "(`)(--\\s*sql)",
            "beginCaptures": {
                "2": {
                    "name": "comment.sql"
                }
            },
            "end": "(`)",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "(?i)(`)(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE |CREATE INDEX)",
            "beginCaptures": {
                "2": {
                    "name": "keyword.sql"
                }
            },
            "end": "(`)",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "comment": "Python multi-line strings",
            "begin": "f?(\"\"\")(--\\s*sql)",
            "beginCaptures": {
                "2": {
                    "name": "comment.sql"
                }
            },
            "end": "(\"\"\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        },
        {
            "begin": "(?i)(\"\"\")(SELECT |INSERT INTO |DELETE |UPDATE |CREATE TABLE |CREATE INDEX)",
            "beginCaptures": {
                "2": {
                    "name": "keyword.sql"
                }
            },
            "end": "(\"\"\")",
            "patterns": [
                {
                    "include": "source.sql"
                }
            ]
        }
    ]
}
