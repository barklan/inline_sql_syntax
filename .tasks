[npm-watch]
command=npm run watch
output=terminal
cwd=<root>

[pg-start]
command=docker run --rm  --name db -e POSTGRES_HOST_AUTH_METHOD=trust -p 5432:5432 postgres
output=terminal
cwd=<root>

[package]
command=vsce package
cwd=<root>
save=2

[publish]
command=vsce publish
cwd=<root>
save=2

[run-vscode]
command=code --extensionDevelopmentPath=$PWD
silent=1
cwd=<root>
save=2
